{
  "name": "omega",
  "description": "Website for the Omega Megagames group",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "npx nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server/src/index.js",
    "build": "tsc",
    "postinstall": "tsc && cd client && yarn install && yarn install --only=dev --no-shrinkwrap && yarn run build"
  },
  "dependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/express": "^4.17.11",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "fp-ts": "^2.9.5",
    "io-ts": "^2.2.14",
    "io-ts-types": "^0.5.13",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^14.14.26",
    "concurrently": "^4.0.1"
  }
}
